---
interface Props {
  currentPath?: string;
}

const { currentPath = '' } = Astro.props;

// 現在のパスに基づいてアクティブなリンクを判定
const isActive = (path: string) => {
  if (path === '/' && currentPath === '/') return true;
  if (path !== '/' && currentPath.startsWith(path)) return true;
  return false;
};
---

<header class="bg-white shadow-sm border-b border-gray-200">
  <nav class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">
      <!-- ロゴ/サイト名 -->
      <div class="flex-shrink-0">
        <a href="/" class="text-xl font-bold text-gray-900 hover:text-blue-600 transition-colors">
          My Site
        </a>
      </div>

      <!-- デスクトップナビゲーション -->
      <div class="hidden md:block">
        <div class="ml-10 flex items-baseline space-x-8">
          <a 
            href="/" 
            class={`px-3 py-2 rounded-md text-sm font-medium transition-colors ${
              isActive('/') 
                ? 'bg-blue-100 text-blue-700' 
                : 'text-gray-600 hover:text-gray-900 hover:bg-gray-100'
            }`}
          >
            ホーム
          </a>
          <a 
            href="/blog" 
            class={`px-3 py-2 rounded-md text-sm font-medium transition-colors ${
              isActive('/blog') 
                ? 'bg-blue-100 text-blue-700' 
                : 'text-gray-600 hover:text-gray-900 hover:bg-gray-100'
            }`}
          >
            ブログ
          </a>
          <a 
            href="/works" 
            class={`px-3 py-2 rounded-md text-sm font-medium transition-colors ${
              isActive('/works') 
                ? 'bg-blue-100 text-blue-700' 
                : 'text-gray-600 hover:text-gray-900 hover:bg-gray-100'
            }`}
          >
            ポートフォリオ
          </a>
          <a 
            href="/link" 
            class={`px-3 py-2 rounded-md text-sm font-medium transition-colors ${
              isActive('/link') 
                ? 'bg-blue-100 text-blue-700' 
                : 'text-gray-600 hover:text-gray-900 hover:bg-gray-100'
            }`}
          >
            リンク
          </a>
        </div>
      </div>

      <!-- モバイルメニューボタン -->
      <div class="md:hidden">
        <button 
          id="mobile-menu-button"
          type="button" 
          class="bg-gray-100 inline-flex items-center justify-center p-2 rounded-md text-gray-600 hover:text-gray-900 hover:bg-gray-200 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-blue-500"
          aria-controls="mobile-menu" 
          aria-expanded="false"
        >
          <span class="sr-only">メニューを開く</span>
          <!-- ハンバーガーアイコン -->
          <svg class="block h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
          <!-- 閉じるアイコン（初期は非表示） -->
          <svg class="hidden h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>
    </div>

    <!-- モバイルメニュー -->
    <div class="md:hidden hidden" id="mobile-menu">
      <div class="px-2 pt-2 pb-3 space-y-1 sm:px-3 bg-gray-50 border-t border-gray-200">
        <a 
          href="/" 
          class={`block px-3 py-2 rounded-md text-base font-medium transition-colors ${
            isActive('/') 
              ? 'bg-blue-100 text-blue-700' 
              : 'text-gray-600 hover:text-gray-900 hover:bg-gray-100'
          }`}
        >
          ホーム
        </a>
        <a 
          href="/blog" 
          class={`block px-3 py-2 rounded-md text-base font-medium transition-colors ${
            isActive('/blog') 
              ? 'bg-blue-100 text-blue-700' 
              : 'text-gray-600 hover:text-gray-900 hover:bg-gray-100'
          }`}
        >
          ブログ
        </a>
        <a 
          href="/works" 
          class={`block px-3 py-2 rounded-md text-base font-medium transition-colors ${
            isActive('/works') 
              ? 'bg-blue-100 text-blue-700' 
              : 'text-gray-600 hover:text-gray-900 hover:bg-gray-100'
          }`}
        >
          ポートフォリオ
        </a>
        <a 
          href="/link" 
          class={`block px-3 py-2 rounded-md text-base font-medium transition-colors ${
            isActive('/link') 
              ? 'bg-blue-100 text-blue-700' 
              : 'text-gray-600 hover:text-gray-900 hover:bg-gray-100'
          }`}
        >
          リンク
        </a>
      </div>
    </div>
  </nav>
</header>

<script>
  // モバイルメニューの開閉機能
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');
  
  if (mobileMenuButton && mobileMenu) {
    mobileMenuButton.addEventListener('click', () => {
      const isExpanded = mobileMenuButton.getAttribute('aria-expanded') === 'true';
      const hamburgerIcon = mobileMenuButton.querySelector('svg:first-of-type');
      const closeIcon = mobileMenuButton.querySelector('svg:last-of-type');
      
      // メニューの表示/非表示を切り替え
      if (isExpanded) {
        mobileMenu.classList.add('hidden');
        mobileMenuButton.setAttribute('aria-expanded', 'false');
        hamburgerIcon?.classList.remove('hidden');
        hamburgerIcon?.classList.add('block');
        closeIcon?.classList.remove('block');
        closeIcon?.classList.add('hidden');
      } else {
        mobileMenu.classList.remove('hidden');
        mobileMenuButton.setAttribute('aria-expanded', 'true');
        hamburgerIcon?.classList.remove('block');
        hamburgerIcon?.classList.add('hidden');
        closeIcon?.classList.remove('hidden');
        closeIcon?.classList.add('block');
      }
    });

    // リンクをクリックしたらモバイルメニューを閉じる
    const mobileLinks = mobileMenu.querySelectorAll('a');
    mobileLinks.forEach(link => {
      link.addEventListener('click', () => {
        mobileMenu.classList.add('hidden');
        mobileMenuButton.setAttribute('aria-expanded', 'false');
        const hamburgerIcon = mobileMenuButton.querySelector('svg:first-of-type');
        const closeIcon = mobileMenuButton.querySelector('svg:last-of-type');
        hamburgerIcon?.classList.remove('hidden');
        hamburgerIcon?.classList.add('block');
        closeIcon?.classList.remove('block');
        closeIcon?.classList.add('hidden');
      });
    });
  }
</script>
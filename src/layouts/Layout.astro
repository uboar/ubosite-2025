---
import '@styles/global.css';
import Header from '@components/Header.astro';

interface Props {
  title: string;
  description?: string;
  currentPath?: string;
  backgroundPattern?: 'main' | 'blog' | 'works' | 'links';
  ogImage?: string;
}

const { 
  title, 
  description = 'WRITE SOMETHING ANYWAY',
  currentPath = '',
  backgroundPattern = 'main',
  ogImage
} = Astro.props;

const site = Astro.site || new URL('https://uboar.net');
const defaultOgImage = new URL('/og/home.png', site).href;
---

<!DOCTYPE html>
<html lang="ja">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title}</title>
  <meta name="description" content={description}>
  
  <!-- Open Graph / Facebook -->
  <meta property="og:type" content="website">
  <meta property="og:title" content={title}>
  <meta property="og:description" content={description}>
  <meta property="og:site_name" content="UBOPAGE">
  <meta property="og:image" content={ogImage || defaultOgImage}>
  <meta property="og:url" content={new URL(Astro.url.pathname, site).href}>
  
  <!-- Twitter -->
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:title" content={title}>
  <meta name="twitter:description" content={description}>
  <meta name="twitter:image" content={ogImage || defaultOgImage}>
  <meta name="twitter:site" content="@uboar">
  
  <!-- Canonical URL -->
  <link rel="canonical" href={new URL(Astro.url.pathname, site).href}>
  
  <!-- Additional SEO Meta Tags -->
  <meta name="author" content="UBOAR">
  <meta name="robots" content="index, follow">
  
  <!-- Favicon -->
  <link rel="icon" type="image/svg+xml" href="/favicon.svg">
  
  <!-- Preconnect to external domains -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link rel="preconnect" href="https://content.uboar.net">
  <link rel="dns-prefetch" href="https://content.uboar.net">
  
  <!-- Fonts with font-display: swap for better performance -->
  <style is:inline>
    @import url('https://fonts.googleapis.com/css2?family=IBM+Plex+Sans+JP:wght@300;400;500;600;700&display=swap');
    @import url('https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@400;500&display=swap');
  </style>
  
  <!-- Prefetch and preload critical resources -->
  <link rel="preload" href="/assets/fonts/inter.woff2" as="font" type="font/woff2" crossorigin>
  
  <!-- Structured Data (JSON-LD) -->
  <script type="application/ld+json" is:inline>
    {
      "@context": "https://schema.org",
      "@type": "WebSite",
      "name": "UBOPAGE",
      "url": "https://uboar.net",
      "description": "UBOARの個人サイト。プログラミング、ゲーム開発、イラスト、音楽などの創作活動を公開しています。",
      "author": {
        "@type": "Person",
        "name": "UBOAR",
        "url": "https://uboar.net"
      },
      "potentialAction": {
        "@type": "SearchAction",
        "target": {
          "@type": "EntryPoint",
          "urlTemplate": "https://uboar.net/search?q={search_term_string}"
        },
        "query-input": "required name=search_term_string"
      }
    }
  </script>
</head>
<body class={`bg-pattern-${backgroundPattern} particles motion-preset-fade`}>
  <Header currentPath={currentPath} />
  
  <main class="main-content">
    <slot />
  </main>
  
  <!-- Global styles for body padding -->
  <style>
    /* Ensure full height for html and body */
    html, body {
      height: 100%;
      min-height: 100vh;
    }
    
    body {
      background-attachment: fixed;
    }
    
    .main-content {
      padding-top: 5rem; /* Header height + spacing */
      min-height: calc(100vh - 5rem);
      position: relative;
      z-index: 1;
    }
    
    /* Ensure smooth scrolling */
    html {
      scroll-behavior: smooth;
    }
    
    /* Custom scrollbar for webkit browsers */
    ::-webkit-scrollbar {
      width: 8px;
    }
    
    ::-webkit-scrollbar-track {
      background: var(--bg-secondary);
    }
    
    ::-webkit-scrollbar-thumb {
      background: var(--orange-main);
      border-radius: 4px;
    }
    
    ::-webkit-scrollbar-thumb:hover {
      background: var(--orange-light);
    }
    
    /* Focus indicators for accessibility */
    :focus-visible {
      outline: 2px solid var(--orange-main);
      outline-offset: 2px;
    }
  </style>
</body>
</html></slot>